<center>
<ul>
<div class="card" style="width: 30rem;">
<div class="card-body">
  <h3> <%= @user.user_name %>'s posts </h3>
<% if current_user.user_name != @user.user_name %>
  <% if !following? %>
  <form action="/users/<%=@user.id%>/follow" method = "POST">
      <input type="submit" value = "Follow Account">
  </form>
          <% else %>    
  <form action="/users/<%=@user.id%>/unfollow" method = "POST">
        <input type="submit" value = "Unfollow Account">    
  </form>
  <% end %>â€©
<% end %>
</div>
</div>
<br>
<% if @user.posts.length == 0 %>
  <p> This user has not written any posts yet. </p>
<% else %>
<% @user.posts.each do |post| %>
  <div class="card" style="width: 30rem;">
  <div class="card-body">
      <!----- <h5 class="card-title"></h5> ------>
      <h6 class="card-subtitle mb-2 text-muted">Posted: <%=post.created_at.ago_in_words %></h6>
      <br>
  <p class="card-text"><%= post.content %></p>
  </div>
  </div>
  <br>
<% end %>
<% end %>
</ul>
</center>
