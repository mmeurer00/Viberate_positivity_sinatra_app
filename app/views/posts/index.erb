<center>
<h2>Positive Post Feed</h2>
<ul>
<% @posts.each do |post| %>
  <div class="card" style="width: 30rem;">
  <div class="card-body">
    <!----- <h5 class="card-title"></h5> ------>
    <h6 class="card-subtitle mb-2"><%= post.user.user_name %>
    <% if current_user.user_name != post.user.user_name %>
      <% if post.user.followers.include?(current_user) == false %>
      <form action="/users/<%=post.user.id%>/follow" method = "POST">
          <input type="submit" value = "Follow Account">
      </form>
              <% else %>    
      <form action="/users/<%=post.user.id%>/unfollow" method = "POST">
            <input type="submit" value = "Unfollow Account">   
      </form>
      <% end %>â€©</h6>
    <%end%>
    <p class="card-text"><%= post.content %></p>
  </div>
  </div>
<% end %>
</ul>
</center>
